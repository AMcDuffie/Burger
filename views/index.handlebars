<div class="container bg">
	<!-- Header -->	
	<div class="row">
	    <div class="center col-sm-12">
					<img src="image/bacon-burger.png" class="imgsize" alt="burger">
	        <h1 style="font-size: 24pt; font-weight: bold; color: #ffffff;">Eat-Da-Burger</h1>
	    </div>
  	</div>
	<!-- end -->
	<div class="row">
	  	    <div class="col-sm-6" id="textright">

			<br>
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <button data-id="{{this.id}}" class="btn-success submit">Devour</button>
							
			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    	</div>

	    <div class="col-sm-6" id="textleft">
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end -->

	<div class="row">
	    <div class="center col-sm-12">

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <h3>Enter a burger you want to order and click the Submit Order button.</h3>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-success" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->


</div>